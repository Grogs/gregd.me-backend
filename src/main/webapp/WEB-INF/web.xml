<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<servlet>
		<servlet-name>scalatra</servlet-name>
		<servlet-class>com.example.app.MyScalatraServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>scalatra</servlet-name>
		<url-pattern>/scalatra/*</url-pattern>
	</servlet-mapping>

	<!-- Static Asset Serving Example -->
	<!-- <servlet-mapping> <servlet-name>default</servlet-name> <url-pattern>/img/*</url-pattern> 
		<url-pattern>/css/*</url-pattern> <url-pattern>/js/*</url-pattern> </servlet-mapping> -->

	<servlet>
		<servlet-name>Jersey</servlet-name>
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>

		<init-param>
			<param-name>com.sun.jersey.config.property.packages</param-name>
			<param-value>me.gregd.www;org.codehaus.jackson.jaxrs</param-value>
		</init-param>

		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>Jersey</servlet-name>
		<url-pattern>/api/*</url-pattern>
	</servlet-mapping>
</web-app>
